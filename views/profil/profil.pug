        name: "report-bug-form", 
        method: "post", 
        action: "api/mailPage", 
        onSubmit: "event.preventDefault(); sendMail();",
        inputs: { 
                0: { id: "mail-subject", name: "subject", type: "text", placeholder: "Localisation du probl√®me" }, 
                1: { id: "mail-content", name: "content", type: "text", placeholder: "Explication du probl√®me" },
