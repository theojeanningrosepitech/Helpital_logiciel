extends ../header
block content
    link(rel='stylesheet', href='/stylesheets/inventory.css')
    script(type='text/javascript' src='/javascripts/inventory.js')
    #inner-body.margin-top-element
        div.property-list
            div.actions
                button.add(onClick="openLink('/back_office/inventory/edit?id=" + data.id + "')") Modifier
                button.add(onClick="deleteInventoryObject(" + data.id + ")") Supprimer
            h3 Informations
            div
                span Num√©ro :
                span ##{data.id}
            div
                span Nom :
                span #{data.title}
            div
                span Type :
                span #{data.type.display_name}
            if data.room
                h3 Stockage
                div
                    span Salle :
                    span #{data.room.title}
                div
                    span Type :
                    span #{data.room.type.display_name}
                div
                    span Etage :
                    span #{data.room.floor}
                div
                    span Service :
                    span #{data.room.service.title}
